{% comment %}
  Preload LCP logo if exists in settings or fallback to shop.logo
{% endcomment %}

<h2 class="header__title" {{ block.shopify_attributes }}>
  {% if block.settings.logo == 'logo' %}
    {% if settings.logo != blank %}
      {% render 'image',
        image: settings.logo,
        url: shop.url,
        alt: shop.name,
        class: "header__logo",
        width: settings.logo_size,
        sizes: "(max-width: 640px) 60px, (max-width: 1024px) 70px, 80px"
      %}
    {% elsif shop.logo %}
      {% render 'image',
        image: shop.logo ,
        url: shop.url,
        alt: shop.name,
        class: "header__logo",
        width: settings.logo_size,
        sizes: "(max-width: 640px) 60px, (max-width: 1024px) 70px, 80px"
      %}
    {% else %}
      {{ shop.name | link_to: routes.root_url }}
    {% endif %}
  {% elsif block.settings.logo == 'text' %}
    {{ shop.name | link_to: routes.root_url }}
  {% else %}
    <span class="header__logo-placeholder">Logo Placeholder</span>
  {% endif %}
</h2>

{% schema %}
{
  "name": "Title Logo Block",
  "settings": [
    {
      "type": "select",
      "id": "logo",
      "label": "Logo",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "logo",
          "label": "Logo"
        },
        {
          "value": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Title Logo Block",
      "category": "Header"
    }
  ]
}
{% endschema %}
