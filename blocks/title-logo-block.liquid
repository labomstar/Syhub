{% comment %}
  Preload LCP logo if exists in settings or fallback to shop.logo
{% endcomment %}

<h2 class="header__title" {{ block.shopify_attributes }}>
  {% if block.settings.logo == 'logo' %}
    {% if settings.logo != blank %}
      {%
        render 'image',
        image: settings.logo | image_url
        url: shop.url
        alt: shop.name
        class:"header__logo"
        width: "80"
        fetchpriority:"high"
      %}
    {% elsif shop.logo %}
      {%
        render 'image',
        image:  settings.logo | image_url
        alt: shop.name
        class:"header__logo"
        width: settings.logo_size
        fetchpriority:"high"
      %}
    {% else %}
      {{ shop.name | link_to: routes.root_url }}
    {% endif %}
  {% elsif block.settings.logo == 'text' %}
    {{ shop.name | link_to: routes.root_url }}
  {% else %}
    <span class="header__logo-placeholder">Logo Placeholder</span>
  {% endif %}
</h2>

{% schema %}
{
  "name": "Title Logo Block",
  "settings": [
    {
      "type": "select",
      "id": "logo",
      "label": "Logo",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "logo",
          "label": "Logo"
        },
        {
          "value": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Title Logo Block",
      "category": "Header"
    }
  ]
}
{% endschema %}
