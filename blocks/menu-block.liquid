  "class": "w-full",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "menu"
    },
    {
      "type": "select",
      "id": "menu_style",
      "label": "menu_style",
      "default": "classic-menu",
      "options": [
        {
          "value": "classic-menu",
          "label": "classic-menu"
        },
        {
          "value": "mega-menu",
          "label": "mega-menu"
        }
      ]
    },
    {
      "type": "color",
      "id": "link_bg_color",
      "label": "link background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "link_text_color",
      "label": "link text color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "item_hover_effect",
      "label": "item_hover_effect",
      "options": [
        {
          "value": "lightline",
          "label": "light underline"
        },
        {
          "value": "hover-underline",
          "label": "underline"
        },
        {
          "value": "hover-doubleline",
          "label": "doubleline"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Menu Block",
      "category": "Header"
    }
  ]
}
{% endschema %}
