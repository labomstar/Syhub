{% doc %}
  Renders a text block.

  @example
  {% content_for 'block', type: 'tools', id: 'tools' %}
{% enddoc %}

<div class="header__menu relative w-full" {{ block.shopify_attributes }}>
  <ul class="flex px-{{ block.settings.menu_horizontal_padding }} {{ block.settings.menu_width }} justify-between items-center space-x-6 text-gray-600 hover:text-black">
    {% for link in block.settings.menu.links %}
      {% if link.links != blank %}
        <li class="relative">
          <button
            class="flex items-center gap-x-1 text-sm font-medium js-toggle-header-menu"
            id="list-toggle-{{ link.title | handleize }}"
            data-target="header-menu-{{ link.title | handleize }}"
          >
            {{ link.title }}
            {% render 'icon-chevron-down' %}
          </button>

          <!-- Drop-down بدل Mega Menu -->
          {% if block.settings.menu_style == "mega-menu" %}
            test
          {% else %}
            {% render 'classic-menu', link: link %}
          {% endif %}
        </li>
      {% else %}
        <li>
          <a href="{{ link.url }}" class="text-sm">
            {{ link.title }}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "Menu Block",
  "class": "mx-auto w-screen relative",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "menu"
    },
    {
      "type": "select",
      "id": "menu_style",
      "label": "menu_style",
      "default": "classic-menu",
      "options": [
        {
          "value": "classic-menu",
          "label": "classic-menu"
        },
        {
          "value": "mega-menu",
          "label": "mega-menu"
        }
      ],
    },
    {
      "type": "select",
      "id": "menu_width",
      "label": "menu_width",
      "options": [
        {
          "value": "w-full",
          "label": "full"
        },
        {
          "value": "w-fit",
          "label": "fit"
        }
      ]
    },
    {
      "type": "range",
      "id": "menu_horizontal_padding",
      "label": "menu_horizontal_padding",
      "min": 0,
      "max": 12,
      "step": 2,
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Menu Block",
      "category": "Header"
    }
  ]
}
{% endschema %}
