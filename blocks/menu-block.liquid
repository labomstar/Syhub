{% doc %}
  Renders a text block.

  @example
  {% content_for 'block', type: 'tools', id: 'tools' %}
{% enddoc %}

<div class="header__menu relative" {{ block.shopify_attributes }}>
  <ul class="flex items-center space-x-6 text-gray-600 hover:text-black">
    {% for link in block.settings.menu.links %}
      {% if link.links != blank %}
        <li class="relative group">
          <button
            class="flex items-center gap-x-1 text-sm font-medium"
            id="list-toggle-{{ link.title | handleize }}"
          >
            {{ link.title }}
          </button>
          <!-- Mega menu container -->
          <div
            class="absolute top-full left-0 w-screen hidden group-hover:block bg-white shadow-lg z-20"
          >
            <div class="max-w-6xl mx-auto px-8 py-6 grid grid-cols-3 gap-8">
              {% for childlink in link.links %}
                <div>
                  <a href="{{ childlink.url }}" class="flex items-center space-x-3 group">
                    {% if childlink.object.featured_image %}
                      <img
                        src="{{ childlink.object.featured_image | img_url: '100x100' }}"
                        alt="{{ childlink.title }}"
                        class="w-10 h-10 object-cover rounded"
                        width=""
                        height=""
                      >
                    {% endif %}
                    <span class="text-gray-700 group-hover:text-black text-sm font-medium">
                      {{ childlink.title }}
                    </span>
                  </a>

                  <!-- لو فيه grandchildren -->
                  {% if childlink.links != blank %}
                    <ul class="mt-2 space-y-1">
                      {% for grandchild in childlink.links %}
                        <li>
                          <a href="{{ grandchild.url }}" class="text-sm text-gray-500 hover:text-black pl-12 block">
                            {{ grandchild.title }}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
        </li>
      {% else %}
        <li>
          <a
            href="{{ link.url }}"
            class="text-sm"
          >
            {{ link.title }}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "Menu Block",
  "class": "mx-auto",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:settings.menu"
    }
  ],
  "presets": [
    {
      "name": "Menu Block"
    }
  ]
}
{% endschema %}
