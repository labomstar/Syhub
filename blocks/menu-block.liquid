{% doc %}
  Renders a text block.

  @example
  {% content_for 'block', type: 'tools', id: 'tools' %}
{% enddoc %}

{% stylesheet %}
  .header__menu ul .see-more ul {
    display: none;
    position: absolute;
    background: white;
    list-style: none;
  }

  .header__menu ul .see-more:hover ul {
    display: block;
  }
{% endstylesheet %}

{% assign button_class = 'flex items-center gap-x-1 text-sm font-medium js-toggle-header-menu '
  | append: block.settings.item_hover_effect
%}

<div class="header__menu w-full" {{ block.shopify_attributes }}>
  <ul class="flex justify-between items-center w-full space-x-6 text-gray-600 hover:text-black">
    {% for link in block.settings.menu.links %}
      {% if link.links != blank %}
        <li class="relative whitespace-nowrap flex-shrink-0">
          {% assign btn_id = 'list-toggle-' | append: link.title | handleize %}
          {% assign btn_target = 'header-menu-' | append: link.title | handleize %}
          {% render 'button',
            type: 'button',
            id: btn_id,
            class: button_class,
            data_target: btn_target,
            data_label: link.title,
            text: link.title,
            bg_color: block.settings.link_bg_color,
            text_color: block.settings.link_text_color
          %}
          {% if block.settings.menu_style == 'mega-menu' %}
            {% render 'mega-menu', link: link %}
          {% else %}
            {% render 'classic-menu', link: link %}
          {% endif %}
        </li>
      {% else %}
        <li class="flex-shrink-0">
          {% render 'button',
            type: 'link',
            url: link.url,
            class: block.settings.item_hover_effect,
            data_label: link.title,
            text: link.title,
            bg_color: block.settings.link_bg_color,
            text_color: block.settings.link_text_color
          %}
        </li>
      {% endif %}
    {% endfor %}

    <!-- زر See More -->
    <li class="relative group flex-shrink-0 see-more">
      <button class="flex items-center gap-x-1 text-sm font-medium">See more</button>
      <ul class="absolute hidden group-hover:flex group-hover:flex-col gap-y-4 top-full mt-5 right-0 -translate-x-2.5 bg-white shadow-lg rounded-lg w-screen z-50">
        {% comment %} العناصر الزائدة ستُنقل هنا بالـ JS {% endcomment %}
      </ul>
    </li>
    {% comment %}
      <li class="relative group flex-shrink-0 see-more">
        <button class="flex items-center gap-x-1 text-sm font-medium">See more</button>
        <ul
          class="absolute hidden group-hover:flex group-hover:flex-col gap-y-4 top-full mt-5 right-0 -translate-x-2.5 bg-white shadow-lg rounded-lg w-screen z-50"
        ></ul>
      </li>
    {% endcomment %}
  </ul>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuContainer = document.querySelector('.header__menu ul');
    if (!menuContainer) return;

    const seeMoreLi = menuContainer.querySelector('.see-more');
    const seeMoreMenu = seeMoreLi.querySelector('ul');

    function adjustMenu() {
      // إعادة كل العناصر إلى القائمة الرئيسية
      Array.from(seeMoreMenu.children).forEach((li) => menuContainer.insertBefore(li, seeMoreLi));

      const containerWidth = menuContainer.offsetWidth;
      let totalWidth = seeMoreLi.offsetWidth; // زر See More

      const items = Array.from(menuContainer.children).filter((li) => li !== seeMoreLi);
      items.forEach((li) => {
        totalWidth += li.offsetWidth;
        if (totalWidth > containerWidth) {
          seeMoreMenu.appendChild(li); // هنا العناصر تبقى بنفس شكلها (يمكن أن تكون li مع render snippet)
        }
      });

      seeMoreLi.style.display = seeMoreMenu.children.length ? 'flex' : 'none';
    }

    adjustMenu();
    window.addEventListener('resize', adjustMenu);
  });
</script>

{% schema %}
{
  "name": "Menu Block",
  "class": "w-full",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "menu"
    },
    {
      "type": "select",
      "id": "menu_style",
      "label": "menu_style",
      "default": "classic-menu",
      "options": [
        {
          "value": "classic-menu",
          "label": "classic-menu"
        },
        {
          "value": "mega-menu",
          "label": "mega-menu"
        }
      ]
    },
    {
      "type": "color",
      "id": "link_bg_color",
      "label": "link background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "link_text_color",
      "label": "link text color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "item_hover_effect",
      "label": "item_hover_effect",
      "options": [
        {
          "value": "lightline",
          "label": "light underline"
        },
        {
          "value": "hover-underline",
          "label": "underline"
        },
        {
          "value": "hover-doubleline",
          "label": "doubleline"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Menu Block",
      "category": "Header"
    }
  ]
}
{% endschema %}
