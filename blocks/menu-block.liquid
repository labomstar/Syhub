{% doc %}
  Renders a text block.

  @example
  {% content_for 'block', type: 'tools', id: 'tools' %}
{% enddoc %}
<div class="header__menu relative w-full" {{ block.shopify_attributes }}>
  <ul class="flex px-{{ block.settings.menu_horizontal_padding }} {{ block.settings.menu_width }} justify-between items-center space-x-8 text-gray-700 font-medium">
    {% for link in block.settings.menu.links %}
      {% if link.links != blank %}
        <li>
          <button
            class="flex items-center gap-x-1 text-sm js-toggle-header-menu hover:text-[#c42764] transition"
            id="list-toggle-{{ link.title | handleize }}"
            data-target="header-menu-{{ link.title | handleize }}"
          >
            {{ link.title }}
            <svg class="w-3 h-3 mt-0.5 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
        </li>

        <!-- Mega menu container -->
        <div
          id="header-menu-{{ link.title | handleize }}"
          class="absolute top-full left-0 mt-2 w-screen hidden bg-white shadow-lg border-t border-gray-100 z-20 opacity-0 scale-y-95 transform origin-top transition duration-300 ease-out"
        >
          <div class="max-w-6xl mx-auto px-8 py-8">
            <div class="grid grid-cols-4 gap-10">
              {% for childlink in link.links %}
                <div class="text-left">
                  <a href="{{ childlink.url }}" class="flex items-center gap-x-3 mb-3 font-semibold text-gray-800 hover:text-[#c42764] transition">
                    {% if childlink.object.featured_image %}
                      <img
                        src="{{ childlink.object.featured_image | img_url: '100x100' }}"
                        alt="{{ childlink.title }}"
                        class="w-8 h-8 object-cover rounded-md shadow-sm"
                      >
                    {% endif %}
                    <span class="text-base">
                      {{ childlink.title }}
                    </span>
                  </a>

                  {% if childlink.links != blank %}
                    <ul class="space-y-2">
                      {% for grandchild in childlink.links %}
                        <li>
                          <a href="{{ grandchild.url }}" class="flex items-center gap-x-2 text-sm text-gray-600 hover:text-[#c42764] transition">
                            {% if grandchild.object.featured_image %}
                              <img
                                src="{{ grandchild.object.featured_image | img_url: '60x60' }}"
                                alt="{{ grandchild.title }}"
                                class="w-6 h-6 object-cover rounded"
                              >
                            {% endif %}
                            {{ grandchild.title }}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      {% else %}
        <li>
          <a href="{{ link.url }}" class="text-sm hover:text-[#c42764] transition">
            {{ link.title }}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>



{% schema %}
{
  "name": "Menu Block",
  "class": "mx-auto w-screen relative",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "menu"
    },
    {
      "type": "select",
      "id": "menu_width",
      "label": "menu_width",
      "options": [
        {
          "value": "w-full",
          "label": "full"
        },
        {
          "value": "w-fit",
          "label": "fit"
        }
      ],
    },
    {
      "type": "range",
      "id": "menu_horizontal_padding",
      "label": "menu_horizontal_padding",
      "min": 0,
      "max": 12,
      "step": 2,
      "default": 0,
    }
  ],
  "presets": [
    {
      "name": "Menu Block",
      "category": "Header",
    }
  ]
}
{% endschema %}
