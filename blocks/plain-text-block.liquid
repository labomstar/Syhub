{% assign scheme = block.settings.color_scheme.settings %}

<div class="text-{{ block.settings.alignment }} py-2"
  style="
    background-color: {{ scheme.background }};
    color: {{ scheme.text }};
    box-shadow: 0 2px 4px {{ scheme.shadow }};
  "
>
  <p class="
    {% if block.settings.font_weight == 'bold' %}font-bold{% elsif block.settings.font_weight == 'light' %}font-light{% else %}font-normal{% endif %}
    {% if block.settings.font_style == 'italic' %}italic{% endif %}
    text-[{{ block.settings.font_size }}px]
  ">
    {{ block.settings.text | escape }}
  </p>
</div>

{% schema %}
{
  "name": "Plain Text Block",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "This is a plain text block."
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "default": 16,
      "min": 12,
      "max": 48,
      "step": 1
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "default": "normal",
      "options": [
        { "value": "normal", "label": "Normal" },
        { "value": "bold", "label": "Bold" },
        { "value": "light", "label": "Light" }
      ]
    },
    {
      "type": "select",
      "id": "font_style",
      "label": "Font Style",
      "default": "normal",
      "options": [
        { "value": "normal", "label": "Normal" },
        { "value": "italic", "label": "Italic" }
      ]
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "Alignment",
      "default": "center"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
