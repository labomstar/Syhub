{% assign scheme = settings.color_schemes[block.settings.color_scheme].settings %}

<p
  class="text-center"
  style="
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    font-style: {{ block.settings.font_style }};
    color: {{ scheme.text }};
    margin: 0;
    padding: 0.5rem 1rem;
  "
>
  {{ block.settings.text }}
</p>

{% schema %}
{
  "name": "Plain Text Block",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "This is plain text."
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size (px)",
      "default": 16,
      "min": 12,
      "max": 48,
      "step": 1
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "default": "normal",
      "options": [
        { "value": "normal", "label": "Normal" },
        { "value": "bold", "label": "Bold" },
        { "value": "lighter", "label": "Light" }
      ]
    },
    {
      "type": "select",
      "id": "font_style",
      "label": "Font Style",
      "default": "normal",
      "options": [
        { "value": "normal", "label": "Normal" },
        { "value": "italic", "label": "Italic" }
      ]
    }
  ]
}
{% endschema %}
