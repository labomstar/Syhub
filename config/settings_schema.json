[
  {
    "name": "theme_info",
    "theme_name": "SyHub",
    "theme_version": "0.1.0",
    "theme_author": "SyHub Team",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  // layout and animations
  {
    "name": "t:general.logo_and_favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "t:settings.default_logo"
      },
      {
        "type": "range",
        "id": "logo_size",
        "label": "t:settings.logo_size",
        "min": 20,
        "max": 300,
        "step": 10,
        "default": 20,
        "unit": "px",
      },
      {
        "type": "image_picker",
        "id": "logo_inverse",
        "label": "t:settings.inverse_logo",
        "info": "t:info.inverse_logo_info"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "t:settings.favicon"
      }
    ]
  },
  {
    "name": "t:general.page_layout",
    "settings": [
      {
        "type": "select",
        "id": "page_width",
        "label": "t:settings.page_width",
        "options": [
          {
            "value": "max-w-sm",
            "label": "t:options.narrow"
          },
          {
            "value": "max-w-md",
            "label": "t:options.normal"
          },
          {
            "value": "max-w-7xl",
            "label": "t:options.wide"
          },
          {
            "value": "w-full",
            "label": "t:options.full"
          }
        ],
        "default": "max-w-7xl"
      },
      {
        "type": "range",
        "id": "page_padding_horizontal",
        "label": "t:settings.page_padding_horizontal",
        "min": 0,
        "max": 100, // in pixels
        "step": 4,
        "default": 16,
        "unit": "px",
      },
      {
        "type": "range",
        "id": "page_padding_vertical",
        "label": "t:settings.page_padding_vertical",
        "min": 0,
        "max": 100, // in pixels
        "step": 4,
        "default": 0,
        "unit": "px",
      }
    ]
  },
  {
    "name": "t:general.animations",
    "settings": [
      {
        "type": "checkbox",
        "id": "page_transition_enabled",
        "label": "t:settings.page_transition_enabled",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "transition_to_main_product",
        "label": "t:settings.transition_to_main_product",
        "default": true
      },
      {
        "type": "select",
        "id": "card_hover_effect",
        "label": "t:settings.card_hover_effect",
        "options": [
          {
            "value": "",
            "label": "t:options.none"
          },
          {
            "value": "hover:shadow-lg translate-y-[-2px] transition",
            "label": "t:options.lift"
          },
          {
            "value": "hover:scale-105 transition-transform duration-200",
            "label": "t:options.scale"
          },
          {
            "value": "hover:scale-[1.02] transition-transform duration-200",
            "label": "t:options.subtle_zoom"
          }
        ],
        "default": "hover:shadow-lg translate-y-[-2px] transition",
        "info": "t:info.hover_effects"
      }
    ]
  },
  {
    "name": "t:settings_schema.colors.name",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "t:settings_schema.colors.settings.background.label",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "t:settings_schema.colors.settings.background_gradient.label",
            "info": "t:settings_schema.colors.settings.background_gradient.info"
          },
          {
            "type": "color",
            "id": "text",
            "label": "t:settings_schema.colors.settings.text.label",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button",
            "label": "t:settings_schema.colors.settings.button_background.label",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "t:settings_schema.colors.settings.button_label.label",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "t:settings_schema.colors.settings.secondary_button_label.label",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "t:settings_schema.colors.settings.shadow.label",
            "default": "#121212"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      }
    ]
  },
  {
    "name": "Color mappings",
    "settings": [
      {
        "type": "text",
        "id": "color_option_labels",
        "label": "Color Option Labels",
        "default": "color,colour,اللون",
        "info": "أدخل الكلمات التي تحدد خيارات اللون، مفصولة بفواصل، مثلاً: color,colour,اللون"
      },
      {
        "type": "textarea",
        "id": "color_map",
        "label": "Color Map (JSON format)",
        "default": "{\"أحمر\": \"#ff0000\", \"أزرق\": \"#0000ff\"}",
        "info": "أدخل خريطة الألوان بصيغة JSON، مثلاً: {\"أحمر\": \"#ff0000\", \"أزرق\": \"#0000ff\"}"
      }
    ]
  },
  {
    "name": "t:settings_schema.productCard.name",
    "settings": [
      {
        "type": "select",
        "id": "productcards_text_alignment",
        "label": "t:settings_schema.productCard.settings.productcards_text_alignment.label",
        "options": [
          {
            "value": "text-left",
            "label": "t:settings_schema.productCard.settings.productcards_text_alignment.options__1.label"
          },
          {
            "value": "text-center",
            "label": "t:settings_schema.productCard.settings.productcards_text_alignment.options__2.label"
          },
          {
            "value": "text-right",
            "label": "t:settings_schema.productCard.settings.productcards_text_alignment.options__3.label"
          }
        ],
        "default": "text-left"
      },
      {
        "type": "header",
        "content": "t:settings_schema.productCard.settings.labels.header"
      },
      {
        "id": "show_sale_label",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.labels.show_sale_label.label",
        "default": true
      },
      {
        "type": "select",
        "id": "sale_label_price",
        "label": "t:settings_schema.productCard.settings.labels.sale_label_price.label",
        "options": [
          {
            "value": "none",
            "label": "t:settings_schema.productCard.settings.labels.sale_label_price.options__1.label"
          },
          {
            "value": "percentage",
            "label": "t:settings_schema.productCard.settings.labels.sale_label_price.options__2.label"
          },
          {
            "value": "amount",
            "label": "t:settings_schema.productCard.settings.labels.sale_label_price.options__3.label"
          }
        ],
        "default": "percentage"
      },
      {
        "id": "show_stock_label",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.labels.show_stock_label.label",
        "info": "t:settings_schema.productCard.settings.labels.show_stock_label.info",
        "default": true
      },
      {
        "type": "range",
        "id": "stock_label_qty",
        "label": "t:settings_schema.productCard.settings.labels.stock_label_qty.label",
        "min": 1,
        "max": 30,
        "step": 1,
        "default": 5
      },
      {
        "id": "show_price_varies",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.labels.show_price_varies.label",
        "info": "t:settings_schema.productCard.settings.labels.show_price_varies.info",
        "default": true
      },
      {
        "type": "text",
        "id": "product_custom_label",
        "label": "t:settings_schema.productCard.settings.labels.product_custom_label.label",
        "placeholder": "custom.label",
        "default": "custom.label",
        "info": "t:settings_schema.productCard.settings.labels.product_custom_label.info"
      },
      {
        "type": "header",
        "content": "t:settings_schema.productCard.settings.stock.header"
      },
      {
        "id": "show_product_stock",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.stock.show_product_stock.label",
        "default": true
      },
      {
        "type": "range",
        "id": "show_product_stock_qty",
        "label": "t:settings_schema.productCard.settings.stock.show_product_stock_qty.label",
        "info": "t:settings_schema.productCard.settings.stock.show_product_stock_qty.info",
        "min": 1,
        "max": 100,
        "step": 1,
        "default": 20
      },
      {
        "id": "show_product_stock_always",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.stock.show_product_stock_always.label",
        "default": false
      },
      {
        "type": "header",
        "content": "t:settings_schema.productCard.settings.ratings.header"
      },
      {
        "id": "show_product_rating",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.ratings.show_product_rating.label",
        "info": "t:settings_schema.productCard.settings.ratings.show_product_rating.info",
        "default": true
      },
      {
        "type": "header",
        "content": "t:settings_schema.productCard.settings.vendor.header"
      },
      {
        "id": "show_vendor",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.vendor.show_vendor.label",
        "default": true
      },
      {
        "type": "header",
        "content": "t:settings_schema.productCard.settings.addtocart.header"
      },
      {
        "id": "show_addtocart",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.addtocart.show_addtocart.label",
        "info": "t:settings_schema.productCard.settings.addtocart.show_addtocart.info",
        "default": false
      },
      {
        "id": "addtocart_button_text",
        "type": "text",
        "label": "t:settings_schema.productCard.settings.addtocart.addtocart_button_text.label",
        "default": "Add-to-cart"
      },
      {
        "id": "show_input_field",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.addtocart.show_input_field.label",
        "info": "t:settings_schema.productCard.settings.addtocart.show_input_field.info",
        "default": false
      },
      {
        "type": "header",
        "content": "t:settings_schema.productCard.settings.preorder.header"
      },
      {
        "id": "show_preorder",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.preorder.show_preorder.label",
        "info": "t:settings_schema.productCard.settings.preorder.show_preorder.info",
        "default": false
      },
      {
        "id": "show_preorder_inventory",
        "type": "checkbox",
        "label": "t:settings_schema.productCard.settings.preorder.show_preorder_inventory.label",
        "default": true
      },
      {
        "id": "preorder_button_text",
        "type": "text",
        "label": "t:settings_schema.productCard.settings.preorder.preorder_button_text.label",
        "default": "Pre-order"
      },
      {
        "type": "header",
        "content": "t:settings_schema.productCard.settings.short_product_description.header"
      },
      {
        "type": "select",
        "id": "product_short_description",
        "label": "t:settings_schema.productCard.settings.short_product_description.product_short_description.label",
        "info": "t:settings_schema.productCard.settings.short_product_description.product_short_description.info",
        "options": [
          {
            "value": "none",
            "label": "t:settings_schema.productCard.settings.short_product_description.product_short_description.options__1.label"
          },
          {
            "value": "product_description",
            "label": "t:settings_schema.productCard.settings.short_product_description.product_short_description.options__2.label"
          },
          {
            "value": "custom",
            "label": "t:settings_schema.productCard.settings.short_product_description.product_short_description.options__3.label"
          }
        ],
        "default": "product_description"
      },
      {
        "type": "text",
        "id": "product_short_description_text",
        "label": "t:settings_schema.productCard.settings.short_product_description.product_short_description_text.label",
        "placeholder": "custom.short_description",
        "info": "t:settings_schema.productCard.settings.short_product_description.product_short_description_text.info"
      },
      {
        "type": "header",
        "content": "t:settings_schema.productCard.settings.titles.header"
      },
      {
        "type": "checkbox",
        "id": "product_titles_caps",
        "label": "t:settings_schema.productCard.settings.titles.product_titles_caps.label"
      }
    ]
  },

  // end layout and animations
]