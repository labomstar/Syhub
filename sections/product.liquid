{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  //quickstart-a2f667fa.myshopify.com/cdn/shop/files/all_medium.webp?v=1746350113
  files/all.webp

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

{% assign default_variant = product.selected_or_first_available_variant %}
{% assign slected_variant = blank %}

<div x-data="{ productModalOpen: false }">
  <div class="max-w-7xl mx-auto">
    {% render 'bread-crumb' %}

    <div class="flex md:flex-row flex-col gap-6 relative overflow-visible">
      <!-- قسم الصور -->
      {% liquid
        if section.settings.media_sticky
          assign media_classes = 'product--medias sticky top-0 md:w-3/5'
        else
          assign media_classes = 'md:w-3/5'
        endif
      %}
      <div class="{{ media_classes }}">
        <div class="mb-3 bg-white shadow-2xl">
          {% assign first_media = product.media | first %}
          <div id="main-product-image" class="overflow-hidden" data-current-media-id="{{ first_media.id }}">
            {% render 'product-media',
              media: first_media,
              height: '220px',
              width: '220px',
              loading: 'lazy',
              alt: product.title
            %}
          </div>

          <!-- صور الميديا المخفية -->
          <div id="all-variant-media" class="hidden">
            {% for media in product.media %}
              <div data-media-id="{{ media.id }}" class="overflow-hidden">
                {% render 'product-media',
                  media: media,
                  mediaId: media.id,
                  height: '220px',
                  width: '220px',
                  loading: 'lazy',
                  alt: product.title
                %}
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="thumbnail-slider">
          <div class="swiper thumbnails-swiper">
            <div class="swiper-wrapper">
              {% for media in product.media offset: 1 %}
                <div class="swiper-slide">
                  <button class="thumbnail-container_{{ media.id }}">
                    {% render 'product-media',
                      media: media,
                      height: '180px',
                      width: '180px',
                      mediaId: media.id,
                      loading: 'lazy',
                      alt: product.title
                    %}
                  </button>
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
          </div>
        </div>
      </div>

      <!-- قسم المعلومات -->
      <div class="product--information px-4 md:w-2/5">
        {% form 'product', product, id: 'product-form', novalidate: 'novalidate' %}
          <div data-product-handle="{{ product.handle }}"></div>

          <!-- العنوان -->
          <div class="flex flex-col mb-3" id="product-title_{{ product.title }}">
            <h1 class="text-3xl text-gray-900 font-extrabold uppercase">{{ product.title }}</h1>
            <div class="flex justify-start gap-4 text-sm text-gray-400">
              <span>{{ section.blocks.settings.vendor_name | default: product.vendor }}</span>
              <button
                type="button"
                aria-label="Share"
                onclick="navigator.clipboard.writeText('{{ shop.url }}{{ product.url }}').then(() => { alert('Product URL copied!'); })"
                class="flex gap-2 items-center hover:text-[#c42764] hover:font-semibold"
              >
                {% render 'icons', icon: 'share' %}
                Share
              </button>
            </div>
          </div>

          <!-- المعلومات الرئيسية -->
          <div class="bg-white border-0 p-4 shadow-2xl rounded-2xl" id="product-information_{{ product.title }}">
            <input type="hidden" id="formInput" name="id" value="{{ default_variant.id }}">

            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'vendor' %}
                  <div class="my-3 flex justify-center items-center gap-2 p-6">
                    {% if block.settings.vendor_type == 'image' and block.settings.vendor_image != blank %}
                      <img
                        src="{{ block.settings.vendor_image | image_url }}"
                        alt="{{ product.vendor }}"
                        class="object-contain max-w-36 max-h-36"
                        width=""
                        height=""
                      >
                    {% else %}
                      <span class="text-xs text-gray-500">
                        {{ block.settings.vendor_name | default: product.vendor }}
                      </span>
                    {% endif %}
                  </div>

                {% when 'title' %}
                  <h2 class="my-3 font-extrabold text-xl">{{ product.title }}</h2>

                {% when 'price' %}
                  <div class="my-3" id="price-{{ section.id }}">
                    <span class="text-base text-gray-500 line-through">
                      {{ default_variant.compare_at_price | money }}
                    </span>
                    <span class="text-lg text-gray-900">{{ default_variant.price | money }}</span>
                    {% if default_variant.price < default_variant.compare_at_price %}
                      <span class="px-5 py-1 text-sm font-bold bg-red-500 rounded-full text-white mx-4">Sale</span>
                    {% endif %}
                  </div>

                {% when 'product-variant' %}
                  {% render 'product-variant', product: product, display_type: block.settings.variant_display_type %}

                {% when 'quantity' %}
                  <div class="my-3">
                    <label for="Quantity-{{ section.id }}">Quantity</label>
                    <div class="my-2">
                      <input
                        type="number"
                        name="quantity"
                        id="Quantity-{{ section.id }}"
                        value="1"
                        min="1"
                        class="w-full border px-3 py-3"
                      >
                    </div>
                  </div>

                {% when 'description' %}
                  <div class="my-3">
                    <h2 class="text-lg font-semibold">Product Description</h2>
                    <p class="text-gray-700">{{ product.description }}</p>
                  </div>

                {% when 'checkout_buttons' %}
                  <div class="my-3">
                    <button
                      aria-label="add to cart"
                      type="submit"
                      name="add"
                      class="w-full px-6 py-4 rounded-sm my-2"
                      {% if default_variant.available == false %}
                        disabled
                      {% endif %}
                    >
                      {% if default_variant.available == false %}Sold out{% else %}Add to cart{% endif %}
                    </button>
                  </div>

                {% when 'sku' %}
                  {% if default_variant.sku != blank %}
                    <span class="text-gray-400 text-sm" id="container-sku">{{ default_variant.sku }}</span>
                  {% endif %}

                {% when 'guarantee' %}
                  <div class="my-3 flex flex-col justify-center items-center gap-y-4 border-neutral-400 shadow-md bg-neutral-50 px-4 py-3">
                    {% if block.settings.guarantee_title != blank %}
                      <h2>{{ block.settings.guarantee_title }}</h2>
                      <img
                        src="{{ block.settings.guarantee_image | image_url: width: 100, height: 100 }}"
                        alt="{{ block.settings.guarantee_title }}"
                        class="h-24 w-24 object-cover rounded-full"
                        width=""
                        height=""
                      >
                      <span class="text-xs text-gray-500 max-w-5xl">{{ block.settings.guarantee_description }}</span>
                    {% endif %}
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        {% endform %}
      </div>
    </div>
  </div>

  <!-- نموذج JSON-LD Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "Product",
      "name": "{{ product.title | escape }}",
      "image": [
        {% for media in product.media %}
          "{{ media.preview_image.src }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      "description": "{{ product.description | strip_html | escape }}",
      "sku": "{{ default_variant.sku }}",
      "offers": {
        "@type": "Offer",
        "url": "{{ shop.url }}{{ product.url }}",
        "priceCurrency": "{{ shop.currency }}",
        "price": "{{ default_variant.price | money_without_currency }}",
        "availability": "{% if default_variant.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}"
      }
    }
  </script>

  <!-- Breadcrumbs JSON-LD -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "{{ shop.url }}"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "{{ product.title }}",
          "item": "{{ shop.url }}{{ product.url }}"
        }
      ]
    }
  </script>
</div>

<script src="{{ 'plugin-product-model.js' | asset_url }}" defer></script>
<script id="product-data" type="application/json">
  {{ product | json }}
</script>
<script src="{{ 'plugin-recently-viewed.js' | asset_url }}" defer></script>
<script src="{{ 'plugin-product-variant-switcher.js' | asset_url }}" defer></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    window.thumbnailsSwiper = new Swiper('.thumbnails-swiper', {
      slidesPerView: 3,
      spaceBetween: 10,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        768: {
          slidesPerView: 3,
          spaceBetween: 15,
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Product",
  "settings": [
    {
      "type": "checkbox",
      "id": "media_sticky",
      "label": "Media Position",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "vendor",
      "name": "Vendor",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "vendor_image",
          "label": "Vendor Image"
        },
        {
          "type": "select",
          "id": "vendor_type",
          "label": "Vendor View Type",
          "options": [
            {
              "value": "text",
              "label": "Text"
            },
            {
              "value": "image",
              "label": "Image"
            }
          ]
        }
      ]
    },
    {
      "type": "guarantee",
      "name": "Guarantee",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "guarantee_title",
          "label": "Guarantee Title"
        },
        {
          "type": "image_picker",
          "id": "guarantee_image",
          "label": "Guarantee Image"
        },
        {
          "type": "richtext",
          "id": "guarantee_description",
          "label": "Guarantee Description"
        }
      ]
    },
    {
      "type": "title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "price",
      "name": "Price",
      "limit": 1
    },
    {
      "type": "product-variant",
      "name": "product variant",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "variant_display_type",
          "label": "Variant display type",
          "options": [
            {
              "value": "color",
              "label": "Color"
            },
            {
              "value": "image",
              "label": "Image"
            }
          ],
          "default": "color"
        }
      ]
    },
    {
      "type": "quantity",
      "name": "Quantity",
      "limit": 1
    },
    {
      "type": "sku",
      "name": "SKU",
      "limit": 1
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1
    },
    {
      "type": "checkout_buttons",
      "name": "Checkout Buttons",
      "limit": 1
    }
  ]
}
{% endschema %}
