{% liquid 
  assign item_in_row = section.settings.item_in_row
  assign group_title = section.settings.show_group_title
  assign show_title = section.settings.show_title
  assign section_title = section.settings.title

  assign vendors = ""
  for product in collections.all.products
    unless vendors contains product.vendor and product.vendor != ""
      assign vendors = vendors | append: product.vendor | append: ","
    endunless
  endfor

  assign unique_vendors = vendors | split: ',' | uniq | sort
  assign current_letter = ""
 %}

<div class="max-w-7xl mx-auto px-4 py-10">
  {% if show_title %}
    <h1 class="text-4xl font-bold text-center mb-10 text-gray-800">
      {{ section_title }}
    </h1>
  {% endif %}

  <div class="space-y-8">
    {% for vendor in unique_vendors %}
      {% if vendor != "" %}
        {% liquid
          assign first_letter = vendor | slice: 0, 1 | downcase
        %}

        {% if group_title and first_letter != current_letter %}
          {% assign current_letter = first_letter %}
          <div class="border-b pb-2 mb-4">
            <h2 class="text-2xl font-semibold text-gray-700">{{ first_letter | upcase }}</h2>
          </div>
        {% endif %}

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-{{ item_in_row }} gap-6">
          <div class="group bg-white rounded-2xl shadow-md border hover:shadow-xl transition duration-300 overflow-hidden">
            <a href="/collections/vendors?q={{ vendor | url_encode }}" class="block h-full">
              <div class="p-6 flex items-center justify-center h-full">
                <h3 class="text-lg font-medium text-gray-700 group-hover:text-white transition">
                  {{ vendor }}
                </h3>
              </div>
              <div class="absolute inset-0 bg-gradient-to-r from-indigo-500 to-purple-600 opacity-0 group-hover:opacity-90 transition duration-300"></div>
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "List Vendors",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Title",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_group_title",
      "label": "Show Group Title",
      "default": true
    },
    {
      "type": "range",
      "id": "item_in_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Item In Row",
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Vendors List"
    }
  ]
}
{% endschema %}
