<header class="fixed top-0 w-full bg-white flex justify-between items-center py-4 px-4 z-50">
  <!-- الشعار -->
  <div>
    <img
      src="{{ settings.logo | image_url }}"
      alt="Shop logo displaying {{ shop.name }} in a welcoming style, positioned in the website header area"
      class="header__logo"
      width="100"
      height="60"
    >
  </div>

  <!-- زر القائمة/الإغلاق -->
  <button id="menu-toggle" aria-label="menu toggle" class="p-2">
    <span id="icon-menu" class="block">{%- render 'icons' , icon: 'icon-menu' %}</span>
    <span id="icon-close" class="hidden">{%- render 'icons' , icon: 'icon-close' %}</span>
  </button>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuToggle = document.getElementById('menu-toggle');
    const iconMenu = document.getElementById('icon-menu');
    const iconClose = document.getElementById('icon-close');

    menuToggle.addEventListener('click', function () {
      iconMenu.classList.toggle('hidden');
      iconClose.classList.toggle('hidden');
    });
  });
</script>

{% schema %}
{
  "name": "Mobile Header",
  "settings": []
}
{% endschema %}
