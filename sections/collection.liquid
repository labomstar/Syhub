{% comment %}
  Collection section with Shopify Search & Discovery filters
{% endcomment %}

{% assign number_of_product = section.settings.number_of_products_per_page %}
{%- assign box_width = settings.body_width -%}
{%- assign section_id = section.id -%}

<section id="shopify-section-{{ section_id }}" class="py-6 mx-auto {{ box_width }}">
  {% render 'bread-crumb' %}

  <!-- Filter Toggle for Mobile -->
  <div class="flex justify-between items-center sticky top-20 z-40 mb-4 lg:hidden">
    <h2 class="text-xl font-bold text-gray-900">{{ collection.title }}</h2>
    <button
      aria-label="Filters"
      onclick="document.getElementById('mobile-filters').classList.toggle('hidden')"
      class="px-3 py-2 bg-gray-100 rounded shadow"
    >
      Filters
    </button>
  </div>

  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Filter Sidebar -->
    <aside
      id="mobile-filters"
      class="hidden lg:block sticky top-20 z-40 w-full lg:w-1/4 bg-white p-4 rounded-lg shadow-md"
    >
      {%- if collection.image.src != blank -%}
        {% render 'image',
          image: collection.image.src,
          alt: collection.title,
          width: 800,
          height: 800,
          class: 'w-full h-auto rounded mb-4',
          loading: 'lazy'
        %}
      {%- endif -%}
      <div class="py-2">
        {% render 'facets', results: collection %}
      </div>
    </aside>

    <!-- Products Grid -->
    <section class="w-full lg:w-3/4">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between text-center sm:text-left py-2 border-b border-[#c42764] mb-4">
        <h1 class="text-2xl font-bold text-gray-900 tracking-tight mb-2 sm:mb-0">{{ collection.title }}</h1>
        <a href="{{ routes.collections_url }}" class="text-sm text-gray-400 hover:text-gray-600 transition"
          >← Back To Collections</a
        >
      </div>

      <div class="mb-4">
        <form id="SortByForm" class="flex items-center justify-between py-2 border-b border-[#c42764]">
          <label for="SortBy" class="mr-2 shrink-0 font-medium text-gray-700">{{ productNumber }} products</label>
          <div class="flex items-center">
            {%- render 'icons', icon: 'icon-grid',  size: 20 -%}
            {%- render 'icons', icon: 'icon-vertical', size: 20 -%}
            {% render 'collection-sort', productNumber: collection.products_count %}
          </div>
        </form>
      </div>

      {% paginate collection.products by number_of_product %}
        <div id="collection-grid">
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for product in collection.products %}
              {%- render 'product-card', product: product -%}
            {% else %}
              <p class="text-center text-gray-500 col-span-full py-10">لا توجد منتجات مطابقة.</p>
            {% endfor %}
          </div>
        </div>

        <div class="mt-8 flex justify-center">
          {%- render 'pagination', pagination: paginate -%}
        </div>
      {% endpaginate %}
    </section>
  </div>
</section>

{% schema %}
{
  "name": "Template Collection",
  "settings": [
    {
      "type": "header",
      "content": "Item In Page"
    },
    {
      "type": "number",
      "id": "number_of_products_per_page",
      "label": "Number Of Products Per Page",
      "default": 8
    }
  ]
}
{% endschema %}

