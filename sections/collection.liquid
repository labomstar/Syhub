{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

{% assign number_of_product = section.settings.number_of_products_per_page %}
{%- assign box_width = settings.body_width -%}

<div class="px-6 py-12 max-w-7xl mx-auto">
  <div class="text-center mb-16 relative" id="collection-header">
    <!-- خلفية خفيفة للصورة -->
    <div class="absolute inset-0 -z-10 opacity-10">
      {% if collection.image %}
        <img
          src="{{ collection.image.src | image_url: width: 1600 }}"
          alt="{{ collection.title }}"
          class="w-full h-full object-cover"
          width=""
          height=""
        >
      {% endif %}
    </div>

    <!-- زر العودة -->
    <a
      href="{{ routes.collections_url }}"
      class="inline-flex items-center text-sm text-gray-500 hover:text-gray-800 transition-colors duration-200 mb-4"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 mr-1"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back To Collections
    </a>

    <!-- العنوان -->
    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 tracking-tight">
      {{ collection.title }}
    </h1>

    <!-- الوصف -->
    {% if collection.description != blank %}
      <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-600 leading-relaxed">
        {{ collection.description }}
      </p>
    {% else %}
      <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-600 leading-relaxed">
        Discover our exclusive selection of products.
      </p>
    {% endif %}

    <!-- صورة المجموعة -->
    {% if collection.image %}
      <div class="mt-8">
        <img
          src="{{ collection.image.src | image_url: width: 800 }}"
          alt="{{ collection.title }}"
          class="rounded-xl shadow-lg mx-auto"
          width=""
          height=""
        >
      </div>
    {% endif %}
  </div>

  <div class="flex flex-col gap-8">
    <!-- Filter Sidebar -->
    <aside class="w-full sticky top-24 max-h-[calc(100vh-6rem)] overflow-y-auto bg-white p-6 rounded-lg shadow-md">
      {%- render 'collection-filter' -%}
    </aside>

    <!-- Products Grid -->
    <section class="w-full">
      {% paginate collection.products by number_of_product %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {% for product in collection.products %}
            {%- render 'product-card', product: product -%}
          {% else %}
            <p class="text-center text-gray-500 col-span-full py-10">لا توجد منتجات تطابق الفلاتر المحددة.</p>
          {% endfor %}
        </div>
        <div class="mt-12 flex justify-center">
          {%- render 'pagination', pagination: paginate -%}
        </div>
      {% endpaginate %}
    </section>
  </div>
</div>

{% schema %}
{
  "name": "Template Collection",
  "settings": [
    {
      "type": "header",
      "content": "Item In Page"
    },
    {
      "type": "number",
      "id": "number_of_products_per_page",
      "label": "Number Of Products Per Page",
      "default": 6
    }
  ]
}
{% endschema %}
