{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

{% assign number_of_product = section.settings.number_of_products_per_page %}
{%- assign box_width = settings.body_width -%}

<div class="px-6 py-12 max-w-7xl mx-auto">
  <div class="text-center mb-12">
    <a href="{{ routes.collections_url }}" class="text-sm text-gray-400 hover:text-gray-600 transition"
      >← Back To Collections</a
    >
    <h1 class="text-4xl font-extrabold text-gray-900 mt-4 tracking-tight">{{ collection.title }}</h1>
    <p class="text-gray-600 mt-2">Discover our exclusive selection of products</p>
  </div>

  <div class="flex gap-8">
    <!-- Filter Sidebar -->

    <aside class="w-1/4 sticky top-24 max-h-[calc(100vh-6rem)] overflow-y-auto bg-white p-6 rounded-lg shadow-md">
      {%- if collection.image.src != blank -%}
        <img
          src="{{ collection.image.src | image_url: width: 800 }}"
          alt="{{ collection.title }}"
          title="{{ collection.description }}"
          width=""
          height=""
        >
      {%- endif -%}
      {%- render 'collection-filter' -%}
    </aside>

    <!-- Products Grid -->
    <section class="w-3/4">
      <form method="get" id="SortByForm">
        <label for="SortBy" class="mr-2 font-medium text-gray-700">ترتيب حسب:</label>
        <select
          name="sort_by"
          id="SortBy"
          class="border border-gray-300 rounded-lg px-3 py-2 text-gray-700 focus:outline-none focus:border-gray-500"
          onchange="this.form.submit()"
        >
          <option
            value="manual"
            {% if collection.sort_by == 'manual' or collection.sort_by == blank %}
              selected
            {% endif %}
          >
            Featured
          </option>
          <option
            value="best-selling"
            {% if collection.sort_by == 'best-selling' %}
              selected
            {% endif %}
          >
            Best selling
          </option>
          <option
            value="title-ascending"
            {% if collection.sort_by == 'title-ascending' %}
              selected
            {% endif %}
          >
            Alphabetically, A-Z
          </option>
          <option
            value="title-descending"
            {% if collection.sort_by == 'title-descending' %}
              selected
            {% endif %}
          >
            Alphabetically, Z-A
          </option>
          <option
            value="price-ascending"
            {% if collection.sort_by == 'price-ascending' %}
              selected
            {% endif %}
          >
            Price, low to high
          </option>
          <option
            value="price-descending"
            {% if collection.sort_by == 'price-descending' %}
              selected
            {% endif %}
          >
            Price, high to low
          </option>
          <option
            value="created-ascending"
            {% if collection.sort_by == 'created-ascending' %}
              selected
            {% endif %}
          >
            Date, old to new
          </option>
          <option
            value="created-descending"
            {% if collection.sort_by == 'created-descending' %}
              selected
            {% endif %}
          >
            Date, new to old
          </option>
        </select>
      </form>
      {% paginate collection.products by number_of_product %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {% for product in collection.products %}
            {%- render 'product-card', product: product -%}
          {% else %}
            <p class="text-center text-gray-500 col-span-full py-10">لا توجد منتجات تطابق الفلاتر المحددة.</p>
          {% endfor %}
        </div>
        <div class="mt-12 flex justify-center">
          {%- render 'pagination', pagination: paginate -%}
        </div>
      {% endpaginate %}
    </section>
  </div>
</div>

{% schema %}
{
  "name": "Template Collection",
  "settings": [
    {
      "type": "header",
      "content": "Item In Page"
    },
    {
      "type": "number",
      "id": "number_of_products_per_page",
      "label": "Number Of Products Per Page",
      "default": 6
    }
  ]
}
{% endschema %}
