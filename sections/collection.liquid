{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

{% assign number_of_product = section.settings.number_of_products_per_page %}
{%- assign box_width = settings.body_width -%}

<div class="px-4 py-20 mx-auto {{ box_width }}">
  <!-- Filter Toggle for Mobile -->
  <div class="flex justify-between items-center mb-4 lg:hidden">
    <h1 class="text-xl font-bold text-gray-900">{{ collection.title }}</h1>
    <button 
      onclick="document.getElementById('mobile-filters').classList.toggle('hidden')"
      class="px-3 py-2 bg-gray-100 rounded shadow">
      Filters
    </button>
  </div>

  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Filter Sidebar -->
    <aside id="mobile-filters" class="hidden lg:block w-full lg:w-1/4 bg-white p-4 rounded-lg shadow-md">
      {%- if collection.image.src != blank -%}
        <img
          src="{{ collection.image.src | image_url: width: 800 }}"
          alt="{{ collection.title }}"
          class="w-full h-auto rounded mb-4"
          loading="lazy"
          width=""
          height=""
        >
      {%- endif -%}
      <div class="py-2">
        <h2 class="text-lg font-semibold mb-2">Filter</h2>
        {%- render 'collection-filter' -%}
      </div>
    </aside>

    <!-- Products Grid -->
    <section class="w-full lg:w-3/4">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between text-center sm:text-left py-2 border-b border-[#c42764] mb-4">
        <h1 class="text-2xl font-bold text-gray-900 tracking-tight mb-2 sm:mb-0">{{ collection.title }}</h1>
        <a href="{{ routes.collections_url }}" class="text-sm text-gray-400 hover:text-gray-600 transition">← Back To Collections</a>
      </div>

      <div class="mb-4">
        {% render 'collection-sort', productNumber: collection.products_count %}
      </div>

      {% paginate collection.products by number_of_product %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {% for product in collection.products %}
            {%- render 'product-card', product: product -%}
          {% else %}
            <p class="text-center text-gray-500 col-span-full py-10">لا توجد منتجات تطابق الفلاتر المحددة.</p>
          {% endfor %}
        </div>

        <div class="mt-8 flex justify-center">
          {%- render 'pagination', pagination: paginate -%}
        </div>
      {% endpaginate %}
    </section>
  </div>
</div>


{% schema %}
{
  "name": "Template Collection",
  "settings": [
    {
      "type": "header",
      "content": "Item In Page"
    },
    {
      "type": "number",
      "id": "number_of_products_per_page",
      "label": "Number Of Products Per Page",
      "default": 8
    }
  ]
}
{% endschema %}
