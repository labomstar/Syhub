{% liquid
  assign section_id = section.id
  assign padding_vertical = section.settings.padding_vertical
  assign padding_horizontal = section.settings.padding_horizontal
%}

<section id="shopify-section-{{ section_id }}" class="relative w-full overflow-hidden "
style="padding: {{ padding_vertical }}px {{ padding_horizontal }}px">
  <!-- Grid (3 images) -->
  <div
    class="sm:swiper mySwiper-grid w-full relative"
    data-next-btn="swiper-button-next-grid"
    data-prev-btn="swiper-button-prev-grid"
    data-slides-per-view="3"
    data-slides-per-view-mobile="1"
    data-autoplay="false"
    data-autoplay-delay="2500"
  >
    <div class="swiper-wrapper md:grid md:grid-cols-3">
      {% for block in section.blocks %}
        {% if block.type == 'grid_image' %}
          {% liquid
            assign grid_image = block.settings.grid_image
            assign grid_title = block.settings.grid_title
            assign grid_text = block.settings.grid_text
            assign button_label = block.settings.button_label
            assign button_link = block.settings.button_link
            assign link_bg_color = block.settings.link_bg_color
            assign link_text_color = block.settings.link_text_color
          %}
          <div class="swiper-slide relative group shadow-lg aspect-[628/420]">
            {% if grid_image %}
              <div class="relative group shadow-lg">
                {%
                  render 'image',
                  image: grid_image,
                  class: 'object-cover group-hover:scale-105 group-hover:shadow-xl transition-transform duration-500 overflow-hidden',
                  width: 620,
                  height: 410,
                  crop: 'center',
                  alt: grid_title | escape,
                %}
              </div>
            {% endif %}
            <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-4">
              {% if grid_title != blank %}
                <h3 class="text-xl font-semibold">{{ grid_title }}</h3>
              {% endif %}
              {% if grid_text != blank %}
                <p class="mt-2">{{ grid_text }}</p>
              {% endif %}
              {% if button_label != blank and button_link != blank %}
                {% render 'button',
                  type: 'link',
                  url: button_link,
                  class: '',
                  data_label: grid_title,
                  text: button_label,
                  bg_color: link_bg_color,
                  text_color: link_text_color
                %}
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Controls تظهر فقط على الموبايل -->
    <div class="swiper-pagination sm:block md:hidden"></div>
  </div>
</section>

{% schema %}
{
  "name": "Section Grid",
  "settings": [
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "slider_height",
      "label": "Slider Height (px)",
      "default": 500,
      "min": 300,
      "max": 900,
      "step": 50
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Section Padding y (px)",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Section Padding x (px)",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5
    }
  ],
  "blocks": [
    {
      "type": "grid_image",
      "name": "Grid Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "grid_image",
          "label": "Image",
          "info": "Recommended size: 620x410px"
        },
        {
          "type": "text",
          "id": "grid_title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "grid_text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "color",
          "id": "link_bg_color",
          "label": "Button Background Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "link_text_color",
          "label": "Button Text Color",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Section Grid",
      "category": "Images"
    }
  ]
}
{% endschema %}
