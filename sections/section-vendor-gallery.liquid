<section id="shopify-section-{{ section.id }}" class="vendor-gallery max-w-7xl mx-auto py-8 px-4">
  <h2 class="text-2xl font-semibold mb-6">{{ section.settings.title_section }}</h2>
  
  <!-- Swiper Container -->
  <div 
    class="swiper mySwiper-{{ section.id }}" 
    data-next-btn="swiper-button-next-{{ section.id }}" 
    data-prev-btn="swiper-button-prev-{{ section.id }}"
    data-slides-per-view="8"
    data-slides-per-view-mobile="3"
  >
    <div class="swiper-wrapper items-center">
      {% for block in section.blocks %}
        {% assign vendor_name = block.settings.vendor_name %}
        {% assign vendor_image = block.settings.vendor_image %}

        {% if vendor_name and vendor_image %}
          <div class="swiper-slide flex justify-center">
            <a href="/collections/vendors?q={{ vendor_name | url_encode }}" class="block group" aria-label="{{ vendor_name | default: section.id }}">
              <img 
                src="{{ vendor_image | image_url: width: 300 }}" 
                alt="{{ vendor_name }}" 
                class="h-20 w-auto object-contain grayscale group-hover:grayscale-0 transition"
                width=""
                height=""
              >
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Controls -->
    <div class="swiper-button-next swiper-button-next-{{ section.id }} !text-black"></div>
    <div class="swiper-button-prev swiper-button-prev-{{ section.id }} !text-black"></div>
  </div>
</section>


{% schema %}
{
  "name": "Vendor Gallery",
  "settings": [
    {
      "type": "text",
      "id": "title_section",
      "label": "title for brands list"
    }
  ],
  "blocks": [
    {
      "type": "vendor_block",
      "name": "Vendor",
      "settings": [
        {
          "type": "text",
          "id": "vendor_name",
          "label": "Vendor Name (exact)"
        },
        {
          "type": "image_picker",
          "id": "vendor_image",
          "label": "Vendor Image"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Vendor Gallery",
      "category": "Images"
    }
  ]
}
{% endschema %}
