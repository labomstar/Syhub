{% assign background = section.settings.color_scheme.settings.background %}

<footer
  class="hidden w-0 xl:w-full xl:flex xl:justify-between m-auto  py-8 px-8 xl:px-24 color-{{ section.settings.color_scheme }}"
  style="background-color: {{ background }};"
>
  <div class="w-full mx-auto max-w-7xl">
    <div class="flex flex-wrap justify-between gap-16">
      <!-- ÿßŸÑÿπŸÖŸàÿØ ÿßŸÑÿ£ŸàŸÑ: ÿÆÿØŸÖÿ© ÿßŸÑÿπŸÖŸÑÿßÿ° -->
      <div class="flex-1 min-w-[250px]">
        <h3 class="text-lg font-bold mb-2">Customer Service</h3>
        <p>The Ultimate Destination for All Your Beauty Needs</p>

        <!-- ÿßÿ≥ÿ™ÿÆÿØÿßŸÖ ÿ®ŸäÿßŸÜÿßÿ™ ÿßŸÑŸÖÿ™ÿ¨ÿ± ÿØŸäŸÜÿßŸÖŸäŸÉŸäŸãÿß ÿπÿ®ÿ± Liquid -->
        <p class="mt-2">
          üìû
          <a href="tel:{{ shop.phone }}" class="text-headerLightColor">
            {{ shop.phone }}
          </a>
        </p>

        <p>
          ‚úâÔ∏è
          <a href="mailto:{{ shop.email }}" class="text-headerLightColor">
            {{ shop.email }}
          </a>
        </p>

        <p class="mt-2">
          <a href="https://wa.me/{{ shop.phone | remove: '+' }}" class="text-headerLightColor font-bold">
            Ask your questions on WhatsApp
          </a>
        </p>
      </div>

      <!-- ÿßŸÑÿπŸÖŸàÿØ ÿßŸÑÿ´ÿßŸÜŸä: ÿ±Ÿàÿßÿ®ÿ∑ ÿßŸÑŸÖÿ™ÿ¨ÿ± -->
      <div class="flex-1 min-w-[250px]">
        <h3 class="text-lg font-bold mb-2">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/pages/about-us" class="text-gray-400 hover:text-black">About Us</a></li>
          <li><a href="/pages/contact-us" class="text-gray-400 hover:text-black">Contact Us</a></li>
          <li><a href="/pages/terms-conditions" class="text-gray-400 hover:text-black">Terms & Conditions</a></li>
          <li><a href="/pages/privacy-policy" class="text-gray-400 hover:text-black">Privacy Policy</a></li>
          <li><a href="/pages/shipping-policy" class="text-gray-400 hover:text-black">Shipping Policy</a></li>
          <li><a href="/pages/refund-returns" class="text-gray-400 hover:text-black">Refunds & Returns Policy</a></li>
        </ul>
      </div>

      <!-- ÿßŸÑÿπŸÖŸàÿØ ÿßŸÑÿ´ÿßŸÑÿ´: ÿßŸÑÿßÿ¥ÿ™ÿ±ÿßŸÉ ÿ®ÿßŸÑÿ®ÿ±ŸäÿØ -->
      <div class="flex-1 min-w-[250px]">
        <h3 class="text-sm font-bold mb-2">Our conversation is just getting started</h3>
        <form method="post" action="{{ routes.newsletter_url }}">
          <input
            type="email"
            name="contact[email]"
            placeholder="Email"
            class="w-full p-2 border border-gray-300 rounded-md mb-2"
            required
          >
          <button type="submit" class="w-full bg-headerLightColor text-white py-2 rounded-md">Subscribe</button>
        </form>

        <div class="mt-4">
          <h4 class="font-semibold">Follow us</h4>
          <div class="flex space-x-4 mt-2">
            <a href="#" class="text-gray-400 hover:text-black">{%- render 'icons' , icon: 'icon-facebook' -%}</a>
            <a href="#" class="text-gray-400 hover:text-black">{%- render 'icons' , icon: 'icon-instagram' -%}</a>
            <a href="#" class="text-gray-400 hover:text-black">{%- render 'icons' , icon: 'icon-whatsapp' -%}</a>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-between items-center mt-8 border-t border-gray-800 pt-4 text-sm text-gray-600">
      <p class="text-left">
        ¬© {{ 'now' | date: '%Y' }}
        {{ shop.name | link_to: routes.root_url }}, {{ powered_by_link }}
      </p>
      <div class="footer__payment text-right flex items-center gap-6">
        {% if section.settings.show_payment_icons %}
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag }}
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}
