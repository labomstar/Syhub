<div class="section-main py-{{ section.settings.padding_y }} {{ section.settings.direction_cotainer }}" style="background-image: url({{ section.settings.background_image | img_url: '2048x2048' }});">
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "Main",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "This image will be used as the background for the section."
    },
    {
      "type": "range",
      "id": "padding-y",
      "label": "Vertical Padding",
      "min": 0,
      "max": 80,
      "step": 2,
      "default": 2
    },
    {
      "type": "select",
      "id": "direction_cotainer",
      "label": "Direction Container",
      "options": [
        { "value": "flex-col", "label": "Column" },
        { "value": "flex-row", "label": "Row" }
      ],
    }
  ],
  "presets": [
    {
      "name": "Main",
      "category": "Sections"
    }
  ],
  "blocks": [{ "type": "@theme" }, { "type": "@app" }]
}
{% endschema %}
