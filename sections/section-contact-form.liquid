{%- assign form_title = section.settings.title -%}
<div class="flex flex-col items-center my-8">
  {%- if form_title != blank -%}
    <h1 class="text-3xl font-medium my-8 md:my-16">
      {{ form_title }}
    </h1>
  {%- endif -%}
  {% form 'contact' %}
    {%- if form.errors -%}
      <div class="items-center w-full my-3 p-5">
        <div class="flex flex-row items-center w-full my-3">
          <div class="text-red-500">
            {%- render 'icon-failed' -%}
          </div>
          <div class="text-sm font-medium ml-3">Oh No? Your Message Is not Send</div>
        </div>
        <ul class="px-8 mb-3 ml-7 list-decimal">
          {% for error in form.errors %}
            <li>
              <span>{{ form.errors.messages[error] }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {%- elsif form.posted_successfully? -%}
      <div class="flex flex-row items-center w-full my-3 p-5">
        <div class="text-green-500">
          {%- render 'icone-success' -%}
        </div>
        <div class="text-sm font-medium ml-3">Message Is Send Successfully</div>
      </div>
    {%- endif -%}
    <div class="max-w-6xl mx-auto">
      <div class="flex gap-4">
        <div class="mb-4 w-1/2">
          <label for="ContactFormName" class="block text-gray-800 font-medium mb-1">Name</label>
          <input
            type="text"
            id="ContactFormName"
            name="contact[name]"
            class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>

        <div class="mb-4 w-1/2">
          <label for="ContactFormEmail" class="block text-gray-800 font-medium mb-1">Email</label>
          <input
            type="email"
            id="ContactFormEmail"
            name="contact[email]"
            class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>
      </div>

      <div class="mb-6">
        <label for="ContactFormMessage" class="block text-gray-800 font-medium mb-1">Message</label>
        <textarea
          rows="10"
          id="ContactFormMessage"
          name="contact[body]"
          class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
        ></textarea>
      </div>

      <div>
        <input
          type="submit"
          value="Send"
          class="w-full bg-headerColor text-white font-semibold py-2 rounded-md hover:bg-headerLightColor focus:outline-none focus:ring-2 focus:ring-headerLightColor"
        >
      </div>
    </div>
  {% endform %}
</div>

{% schema %}
{
  "name": "Section Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Section Contact Form"
    }
  ]
}
{% endschema %}
