<header class="flex flex-col w-full">

  <!-- Main Header -->
  <div class="main-header flex justify-between items-center py-4 px-6">
    <h2 class="header__title text-2xl font-bold">
      {{ shop.name | link_to: routes.root_url }}
    </h2>

    <nav class="header__menu flex space-x-6">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" class="hover:text-blue-600">{{ link.title }}</a>
      {% endfor %}
    </nav>

    <div class="header__icons flex items-center space-x-4">
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}">
          {{ 'icon-account.svg' | inline_asset_content }}
        </a>
      {% endif %}

      <a href="{{ routes.cart_url }}" class="relative">
        {% if cart.item_count > 0 %}
          <sup class="absolute -top-2 -right-2 bg-red-600 text-white rounded-full text-xs w-5 h-5 flex items-center justify-center">{{ cart.item_count }}</sup>
        {% endif %}
        {{ 'icon-cart.svg' | inline_asset_content }}
      </a>
    </div>
  </div>

</header>

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main Menu"
    }
  ]
}
{% endschema %}
