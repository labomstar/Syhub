        },
        {
          "value": "dashed",
          "label": "t:settings.header.border_bottom.dashed"
        }
      ]
    },
    {
      "type": "select",
      "id": "menu_border_width",
      "label": "Menu Item Border Width",
      "options": [
        {
          "value": "0",
          "label": "0"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "4",
          "label": "4"
        },
        {
          "value": "8",
          "label": "8"
        }
      ],
      "default": "0"
    },
    {
