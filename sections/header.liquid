<header class="flex items-center justify-between h-20 px-6">
  {%- if section.settings.show_announcement_bar -%}
    {% section 'announcement-bar' %}
  {%- endif -%}

  {%- if section.settings.show_language_currency_bar -%}
    {% section 'language-currency-bar' %}
  {%- endif -%}

  <h2 class="text-xl font-semibold">
    {{ shop.name | link_to: routes.root_url }}
  </h2>

  <nav class="hidden md:flex gap-6">
    {%- for link in section.settings.menu.links -%}
      <a href="{{ link.url }}" class="hover:text-primary-600 transition">
        {{ link.title }}
      </a>
    {%- endfor -%}
  </nav>

  <div class="flex items-center gap-4">
    {%- if shop.customer_accounts_enabled -%}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {%- endif -%}

    <a href="{{ routes.cart_url }}" class="relative">
      {{ 'icon-cart.svg' | inline_asset_content }}
      {%- if cart.item_count > 0 -%}
        <span
          class="
            absolute -top-1 -right-3 inline-flex items-center justify-center
            rounded-full bg-primary-600 text-white text-xs px-1 leading-none
          "
        >
          {{ cart.item_count }}
        </span>
      {%- endif -%}
    </a>
  </div>
</header>

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement_bar",
      "label": "Show announcement bar",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_language_currency_bar",
      "label": "Show language and currency bar",
      "default": true
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Header Group",
      "settings": {}
    }
  ]
}
{% endschema %}
