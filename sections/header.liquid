          { "type": "user-icon-block", "name": "User Icon Block" },
          { "type": "menu-block", "name": "Menu Block" },
          { "type": "title-logo-block", "name": "Title Logo Block" },
          { "type": "search-block", "name": "Search Block" }
        ]
      }
    ]
{% endcomment %}
