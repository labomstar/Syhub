{% for block in section.blocks %}
  {% render block %}
{% endfor %}

{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "plain-text-block",
      "name": "Plain Text Block"
    },
    {
      "type": "rich-text-block",
      "name": "Rich Text Block"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "blocks": [{ "type": "plain-text-block" }, { "type": "rich-text-block" }]
    }
  ]
}
{% endschema %}
