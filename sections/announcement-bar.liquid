{% if section.settings.enable_announcement_bar %}
  <div
    style="
      background-color: {{ settings.color_schemes[section.settings.color_scheme].settings.background }};
      color: {{ settings.color_schemes[section.settings.color_scheme].settings.text }};
      box-shadow: 0 2px 4px {{ settings.color_schemes[section.settings.color_scheme].settings.shadow }};
    "
  >
    {% for block in section.blocks %}
      {% render block %}
    {% endfor %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_announcement_bar",
      "label": "Enable Announcement Bar",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    { "type": "plain-text-block" },
    { "type": "rich-text-block" },
    { "type": "@theme" },
    { "type": "@app" }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        { "type": "plain-text-block" },
        { "type": "rich-text-block" }
      ]
    }
  ]
}
{% endschema %}
