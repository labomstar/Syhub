<div class="bg-gray-900 text-white text-sm py-2 text-center">
  {{ section.settings.announcement_text }}
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "t:settings.announcement_text",
      "default": "Welcome to our store!"
    },
    {
      "type": "checkbox",
      "id": "enable_announcement_bar",
      "label": "t:settings.enable_announcement_bar",
      "default": true,
      "info": "t:settings.enable_announcement_bar_info"
    }
  ]
}
{% endschema %}
