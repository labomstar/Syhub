{% liquid
  assign section_id = section.id
%}

<div id="shopify-section-{{ section_id }}" class="relative w-full p-4">

  <!-- Slider رئيسي -->
  <div
    class="swiper mySwiper-{{ section_id }} w-full relative"
    data-next-btn="swiper-button-next-{{ section_id }}"
    data-prev-btn="swiper-button-prev-{{ section_id }}"
    data-slides-per-view="1"
    data-autoplay="true"
    data-autoplay-delay="2500"
  >
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <div class="swiper-slide aspect-[16/9] relative max-w-full">
            {% if block.settings.image %}
              {% render 'image',
                image: block.settings.image,
                class: 'w-full h-full object-cover',
                width: 1920,
                height: 1080,
                alt: block.settings.title | escape,
                sizes: '(max-width: 640px) 100vw, (max-width: 1024px) 100vw, 1920px'
              %}
            {% endif %}
            {% if block.settings.show_title_description == true %}
              <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-6">
                <h2 class="text-3xl font-bold">{{ block.settings.title }}</h2>
                <p class="mt-2 max-w-2xl">{{ block.settings.text }}</p>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- أزرار التنقل -->
    <div class="swiper-button-next swiper-button-next-{{ section_id }} text-white"></div>
    <div class="swiper-button-prev swiper-button-prev-{{ section_id }} text-white"></div>
    <div class="swiper-pagination"></div>
  </div>

  <!-- Grid أسفل السلايدر -->
  <div class="mt-6">
    <div
      class="swiper hidden md:block mySwiper-grid w-full relative"
      data-slides-per-view="1"
      data-space-between="16"
    >
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'grid_image' %}
            <div class="swiper-slide">
              <div class="relative overflow-hidden shadow-lg aspect-square">
                {% render 'image',
                  image: block.settings.grid_image,
                  class: 'w-full h-full object-cover group-hover:scale-105 transition-transform duration-500',
                  width: 428,
                  height: 428,
                  alt: block.settings.grid_title | escape,
                  sizes: '(max-width: 640px) 100vw, 33vw'
                %}
              </div>
              <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-4">
                <h3 class="text-xl font-semibold">{{ block.settings.grid_title }}</h3>
                <p class="mt-2">{{ block.settings.grid_text }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>

    <!-- Grid عادي للديسكتوب -->
    <div class="md:hidden grid grid-cols-1 md:grid-cols-3 gap-4">
      {% for block in section.blocks %}
        {% if block.type == 'grid_image' %}
          <div class="relative overflow-hidden shadow-lg aspect-square">
            {% render 'image',
              image: block.settings.grid_image,
              class: 'w-full h-full object-cover group-hover:scale-105 transition-transform duration-500',
              width: 428,
              height: 428,
              alt: block.settings.grid_title | escape,
              sizes: '(max-width: 640px) 100vw, 33vw'
            %}
            <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-4">
              <h3 class="text-xl font-semibold">{{ block.settings.grid_title }}</h3>
              <p class="mt-2">{{ block.settings.grid_text }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Slider with Grid",
  "settings": [
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "slider_height",
      "label": "Slider Height (px)",
      "default": 500,
      "min": 300,
      "max": 900,
      "step": 50
    },
    {
      "type": "range",
      "id": "padding-vertical",
      "label": "Slider Height (px)",
      "default": 2,
      "min": 0,
      "max": 12,
      "step": 2
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image",
          "info": "image height must be 500px and width 1280px"
        },
        {
          "type": "checkbox",
          "id": "show_title_description",
          "label": "show text",
          "default": false
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "grid_image",
      "name": "Grid Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "grid_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "grid_title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "grid_text",
          "label": "Text"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Slider with Grid",
      "category": "Images"
    }
  ]
}
{% endschema %}
