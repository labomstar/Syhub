<div id="shopify-section-{{ section.id }}" class="relative w-full md:py-{{ section.settings.padding-vertical }} p-4">
  <!-- Slider -->
  <div
    class="swiper mySwiper-{{ section.id }} w-full relative"
    data-next-btn="swiper-button-next-{{ section.id }}"
    data-prev-btn="swiper-button-prev-{{ section.id }}"
    data-slides-per-view="1"
    data-slides-per-view-mobile="1"
    data-autoplay="true"
    data-autoplay-delay="2500"
  >
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <div class="swiper-slide h-[680px] md:h-[500px] max-w-full">
            {% if block.settings.image %}
              {% render 'image',
                image: block.settings.image,
                class: 'object-cover',
                width: 1920,
                alt: block.settings.title,
                sizes: '(max-width: 640px) 100vw, (max-width: 1024px) 100vw, 1920px'
              %}
            {% endif %}
            {% if block.settings.show_title_description == true %}
              <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-6">
                <h2 class="text-3xl font-bold">{{ block.settings.title }}</h2>
                <p class="mt-2 max-w-2xl">{{ block.settings.text }}</p>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Slider Controls -->
    <div class="swiper-button-next swiper-button-next-{{ section.id }} text-white"></div>
    <div class="swiper-button-prev swiper-button-prev-{{ section.id }} text-white"></div>
    <div class="swiper-pagination"></div>
  </div>

  <!-- Grid (3 images) -->
  <div class="grid sm:swiper sm:mySwiper-grid md:grid-cols-3 gap-x-1.5 mt-1">
    {% for block in section.blocks %}
      {% if block.type == 'grid_image' %}
        <div class="relative group sm:swiper-wrapper overflow-hidden shadow-lg">
          {% if block.settings.grid_image %}
            <div class="relative swiper-slide group overflow-hidden shadow-lg aspect-square w-full h-[144px] md:h-[280px]">
              {%
                render 'image',
                image: block.settings.grid_image,
                class: 'w-full group-hover:scale-105 transition-transform duration-500',
                width: 420,
                crop: 'center',
                alt: block.settings.grid_title | escape,
                sizes: '(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw'
              %}
            </div>
          {% endif %}
          <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-4">
            <h3 class="text-xl font-semibold">{{ block.settings.grid_title }}</h3>
            <p class="mt-2">{{ block.settings.grid_text }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Slider with Grid",
  "settings": [
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "slider_height",
      "label": "Slider Height (px)",
      "default": 500,
      "min": 300,
      "max": 900,
      "step": 50
    },
    {
      "type": "range",
      "id": "padding-vertical",
      "label": "Slider Height (px)",
      "default": 2,
      "min": 0,
      "max": 12,
      "step": 2
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image",
          "info": "image height must be 500px and width 1280px"
        },
        {
          "type": "checkbox",
          "id": "show_title_description",
          "label": "show text",
          "default": false
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "grid_image",
      "name": "Grid Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "grid_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "grid_title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "grid_text",
          "label": "Text"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Slider with Grid",
      "category": "Images"
    }
  ]
}
{% endschema %}
