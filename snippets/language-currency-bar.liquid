<div class="bg-gray-100 text-sm py-2 px-4 flex justify-between items-center text-gray-700">
  <!-- Social links (left) -->
  <div class="flex items-center gap-4">
    {% if settings.facebook_url != blank %}
      <a href="{{ settings.facebook_url }}" target="_blank" class="hover:text-blue-600 transition">
        <i class="fab fa-facebook"></i> Facebook
      </a>
    {% endif %}
    {% if settings.twitter_url != blank %}
      <a href="{{ settings.twitter_url }}" target="_blank" class="hover:text-blue-400 transition">
        <i class="fab fa-twitter"></i> Twitter
      </a>
    {% endif %}
  </div>

  <!-- Language & Currency (right) -->
  <div class="flex items-center gap-2">
    {% form 'localization' %}
      <select name="country_code" class="mr-2 px-2 py-1 rounded">
        {% for country in form.available_countries %}
          <option value="{{ country.iso_code }}" {% if country.iso_code == form.country.iso_code %}selected{% endif %}>
            {{ country.name }}
          </option>
        {% endfor %}
      </select>
      <select name="locale_code" class="mr-2 px-2 py-1 rounded">
        {% for locale in form.available_locales %}
          <option value="{{ locale.iso_code }}" {% if locale.iso_code == form.locale.iso_code %}selected{% endif %}>
            {{ locale.endonym_name }}
          </option>
        {% endfor %}
      </select>
      <button type="submit" class="ml-2 px-2 py-1 bg-gray-300 rounded hover:bg-gray-400">Apply</button>
    {% endform %}
  </div>
</div>
