<div class="filters space-y-8">
  <!-- Filter by Tags -->
  {% if collection.all_tags.size > 0 %}
    <div>
      <h3 class="font-semibold text-gray-700 mb-4 border-b border-gray-200 pb-2">التصفية حسب الوسوم</h3>
      <ul class="space-y-2 max-h-60 overflow-y-auto scrollbar-thin scrollbar-thumb-gray-300">
        {% for tag in collection.all_tags %}
          <li>
            <a
              href="{{ collection.url }}?constraint={{ tag | handle }}"
              class="text-gray-600 hover:text-indigo-600 transition"
            >
              {{ tag }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  <!-- Filter by Price Range -->
  {% for filter in collection.filters %}
    {% if filter.type == 'price_range' %}
      <div>
        <h3 class="font-semibold text-gray-700 mb-4 border-b border-gray-200 pb-2">{{ filter.label }}</h3>
        <ul class="space-y-2">
          {% for value in filter.values %}
            <li>
              <a href="{{ value.url }}" class="text-gray-600 hover:text-indigo-600 transition">
                {{ value.label }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  {% endfor %}

  <!-- Filter by Options -->
  {% for option in collection.all_types_options %}
    <div>
      <h3 class="font-semibold text-gray-700 mb-4 border-b border-gray-200 pb-2">التصفية حسب {{ option.name }}</h3>
      <ul class="space-y-2">
        {% for value in option.values %}
          <li>
            <a
              href="{{ collection.url }}?options[{{ option.name | handle }}]={{ value | handle }}"
              class="text-gray-600 hover:text-indigo-600 transition"
            >
              {{ value }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</div>
