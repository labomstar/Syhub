<div class="filters space-y-4">
  <div>
    <h3 class="font-bold mb-2">Filter by Tags</h3>
    <ul class="space-y-1">
      {% for tag in collection.all_tags %}
        <li>
          <a
            class="text-blue-500 hover:underline"
            href="{{ collection.url }}?constraint={{ tag | handle }}"
          >
            {{ tag }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>

  {% for filter in collection.filters %}
    {% if filter.type == 'price_range' %}
      <div>
        <h3 class="font-bold mb-2">{{ filter.label }}</h3>
        <ul class="space-y-1">
          {% for value in filter.values %}
            <li>
              <a href="{{ value.url }}" class="text-blue-500 hover:underline">
                {{ value.label }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  {% endfor %}

  {% for option in collection.all_types_options %}
    {% comment %}
      collection.all_types_options iterates through all unique product options
      (e.g., 'Color', 'Size') across all products in the collection.
    {% endcomment %}
    <div>
      <h3 class="font-bold mb-2">Filter by {{ option.name }}</h3>
      <ul class="space-y-1">
        {% for value in option.values %}
          {% comment %}
            option.values gives you all unique values for that option (e.g., 'Red', 'Blue' for 'Color').
          {% endcomment %}
          <li>
            <a
              class="text-blue-500 hover:underline"
              href="{{ collection.url }}?options[{{ option.name | handle }}]={{ value | handle }}"
            >
              {{ value }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</div>