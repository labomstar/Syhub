<div
  id="popup-landpage"
  class="fixed inset-0 flex items-center justify-center bg-black/60 z-50 hidden"
>
  <div class="bg-white max-w-md w-full rounded-lg shadow-xl relative">
    <button
      id="popup-close"
      class="absolute top-3 right-3 text-gray-600 hover:text-black h-10 w-10 bg-white rounded-full -mt-8 -mr-8"
      aria-label="Close"
    >
      ✕
    </button>

    <div class="flex flex-col {{ settings.popup_text_alignment }} gap-y-{{ settings.popup_element_gap }} py-{{ settings.popup_vertical_padding }} px-{{ settings.popup_horizontal_padding }}">
      <!-- image -->
      <div class="mb-4 border-b border-gray-200 rounded-lg overflow-hidden p-3">
        {% render 'image',
          image: settings.popup_image,
          alt: 'Popup Banner',
          width: 130,
          class: 'object-contain w-full h-full grayscale group-hover:grayscale-0 transition duration-300 ease-in-out',
          loading: 'lazy'
        %}
      </div>

      <!-- title -->
      <h2 class="text-xl font-bold mb-2">
        {{ settings.popup_title }}
      </h2>

      <!-- content -->
      <p class="text-gray-700 mb-4">
        {{ settings.popup_content }}
      </p>

      <!-- coupon or product area -->
      {% if settings.popup_show_once == 'product' %}
        <div class="flex items-center justify-center gap-2 mb-4">
          <a
            class="bg-pink-600 hover:bg-pink-700 text-white rounded-lg px-4 py-2"
            href="{{ all_products[settings.popup_product].url }}"
          >
            {{ settings.popup_product_button_text }}
          </a>
        </div>
      {% else %}
        <div class="flex items-center justify-center gap-2 mb-4">
          <div
            id="popup-coupon"
            class="border border-gray-400 rounded-lg px-4 py-2 font-bold tracking-widest"
          >
            {{ settings.copon_code }}
          </div>
          <button
            id="popup-copy"
            class="bg-pink-600 hover:bg-pink-700 text-white rounded-lg px-4 py-2"
          >
            Copy
          </button>
        </div>
      {% endif %}

      <!-- Do not show again -->
      <label class="flex items-center gap-2 text-sm text-gray-600 cursor-pointer">
        <input type="checkbox" id="popup-hide">
        Do not show it anymore
      </label>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const popup = document.getElementById('popup-landpage');
    const closeBtn = document.getElementById('popup-close');
    const hideCheck = document.getElementById('popup-hide');

    // Coupon elements (may not exist if mode = product)
    const couponEl = document.getElementById('popup-coupon');
    const copyBtn = document.getElementById('popup-copy');

    // تحقق إذا ظهرت في هذه الجلسة
    if (!sessionStorage.getItem('popupShown')) {
      popup.classList.remove('hidden');
      sessionStorage.setItem('popupShown', 'true');
    }

    // إغلاق البوب آب
    closeBtn.addEventListener('click', () => {
      popup.classList.add('hidden');
      if (hideCheck && hideCheck.checked) {
        // إذا بدك خيار "لا تظهر مجدداً أبداً" يبقى على localStorage
        localStorage.setItem('hidePopup', 'true');
      }
    });

    // زر نسخ الكود (فقط إذا الكوبون موجود)
    if (copyBtn && couponEl) {
      const coupon = couponEl.innerText.trim();
      copyBtn.addEventListener('click', () => {
        navigator.clipboard.writeText(coupon).then(() => {
          copyBtn.innerText = 'Copied!';
          setTimeout(() => (copyBtn.innerText = 'Copy'), 2000);
        });
      });
    }
  });
</script>
