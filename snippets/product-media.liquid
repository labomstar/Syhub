{% assign img_width = width | default: '400px' %}
{% assign img_height = height | default: '400px' %}

{% case media.media_type %}
  {% when 'image' %}
    <img
      src="{{ media.preview_image | image_url: width: img_width | remove: 'px' }}"
      alt="{{ media.preview_image.alt }}"
      class="object-cover"
      style="width: {{ img_width }}; height: {{ img_height }};"
      width="{{ img_width | remove: 'px' }}"
      height="{{ img_height | remove: 'px' }}"
    >

  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'object-cover', style: 'width: #{img_width}; height: #{img_height}' }}

  {% when 'video' %}
    {{ media | video_tag: controls: true, class: 'object-cover', style: 'width: #{img_width}; height: #{img_height}' }}

  {% when 'model' %}
    <product-model data-media-id="{{ media.id }}">
      <div>
        <button
          id="productModelOpenButton_{{ media.id }}"
          x-on:click="productModalOpen = true"
          style="width: {{ img_width }}; height: {{ img_height }};"
          class="bg-gray-100 border relative"
        >
          <span class="border bg-gray-100 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
            {% render 'icon-model-viewer' %}
          </span>
          <img
            src="{{ media.preview_image | image_url: width: img_width | remove: 'px' }}"
            alt="{{ media.preview_image.alt }}"
            style="width: 100%; height: 100%; object-fit: cover;"
            width="auto"
            height="auto"
          >
        </button>
      </div>

      <template>
        {{ media | model_viewer_tag: reveal: 'interaction' }}
      </template>
    </product-model>

  {% else %}
    {{ media | media_tag }}
{% endcase %}
