<div class="border rounded-lg shadow-sm p-4 hover:shadow-md transition-shadow">
  {{ 'product-1' | placeholder_svg_tag: 'w-full h-48 object-cover rounded-md mb-4' }}
  <div class="text-center">
    <div class="text-lg font-semibold text-gray-800 hover:text-blue-500 block">Title</div>
    <span class="text-sm text-gray-500">Vendor</span>
    <p class="text-xl font-bold text-gray-700 mt-2">{{ "9999" | money }}</p>
    {% unless product.available %}
      <span class="text-red-500 font-semibold mt-2 block">Sold Out</span>
    {% endunless %}
  </div>
</div>
